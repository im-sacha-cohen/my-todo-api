<form method="POST" action="{{ path('app_task_delete', {'id': task.id}) }}" onsubmit="return confirm('Souhaitez-vous réellement supprimer cette tâche ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
    <button class="btn btn-danger mt-3">
        <i class="bi bi-trash-fill"></i>
        Supprimer
    </button>
</form>
